export VERSIONER_PERL_VERSION=5.12.3
export VERSIONER_PERL_PREFER_32_BIT=yes

export APPRISS_ENV='local'
export APPRISS_ENV_HOME='/Users/nbozic/Documents/Interfaces/OS_shared'

export PATH="/opt/local/lib/perl5/5.12.3/darwin-multi-2level:/usr/local/Preproc:/sbin:/usr/local/sbin:/usr/sbin:${PATH}"

#--------------------------------------------------------------------------------
# MacPorts Installer addition of PATH variable for use with MacPorts:
export PATH=/opt/local/bin:/opt/local/sbin:$PATH
#--------------------------------------------------------------------------------

#--------------------------------------------------------------------------------
# Use the GNU tools by default:
export PATH=/opt/local/libexec/gnubin:$PATH
export MANPATH=/opt/local/share/man:$MANPATH
#--------------------------------------------------------------------------------

# wdiff:
export PATH=/var/macports/software/wdiff/0.6.3_0/opt/local/bin:/opt/local/libexec/gnubin:$PATH

#--------------------------------------------------------------------------------

export PERL5LIB="/opt/local/lib/perl5/5.12.3/darwin-multi-2level"

