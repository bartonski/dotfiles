# export $MY_ENV_HOME, changing yyyy to xxxx
exportenvx() 
{ 
	export MY_ENV_HOME=`echo $MY_ENV_HOME | sed "s/yyyy/xxxx/g"`
}

cdxxxx () 
{ 
	agency $1 'cdxxxx' || return 1
	shift  
	exportenvx  
	pushd $MY_ENV_HOME/${SITEPATH}${AGENCY}/$@  
}
cdxxxxsite () 
{ 
	agency $1 'cdxxxxsite' || return 1  
	shift  
	exportenvx  
	pushd $MY_ENV_HOME/${SITEPATH}/$@  
}
checkxxxxlogs () 
{ 
	agency $1 'checkxxxxlogs' || return 1  
	exportenvx  
	tail -f $MY_ENV_HOME/${SITEPATH}${AGENCY}/logs/`date +%Y%m%d.log`  
}

xxxxpath () {
        agency $1 'xxxxpath' || return 1
        exportenvx
        XXXX_AGENCYPATH=$MY_ENV_HOME/${SITEPATH}${AGENCY}
        echo "$XXXX_AGENCYPATH"
}

