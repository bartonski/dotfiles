# 2009-08-17   Barton Chittenden       Changed APPRISS_ENV_HOME to MY_ENV_HOME.
################################################################################

# export $MY_ENV_HOME, changing prep to prod
exportenvp() 
{ 
	export MY_ENV_HOME=`echo $MY_ENV_HOME | sed "s/prep/prod/g"`
}

cdprod () 
{ 
	agency $1 'cdprod' || return 1
	shift  
	exportenvp  
	pushd $MY_ENV_HOME/${SITEPATH}${AGENCY}/$@  
}
cdprodsite () 
{ 
	agency $1 'cdprodsite' || return 1  
	shift  
	exportenvp  
	pushd $MY_ENV_HOME/${SITEPATH}/$@  
}
checkprodlogs () 
{ 
	agency $1 'checkprodlogs' || return 1  
	exportenvp  
	tail -f $MY_ENV_HOME/${SITEPATH}${AGENCY}/logs/`date +%Y%m%d.log`  
}

prodpath () {
        agency $1 'prodpath' || return 1
        exportenvp
        PROD_AGENCYPATH=$MY_ENV_HOME/${SITEPATH}${AGENCY}
        echo "\$PROD_AGENCYPATH=$PROD_AGENCYPATH"
}

