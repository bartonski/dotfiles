#! /usr/bin/perl

#  idrive -> /mnt/apps/
#  jdrive -> /mnt/users/
#  kdrive -> /mnt/vine
#  ldrive -> /mnt/depts
#  udrive -> /mnt/root/pub/
#  y_drive -> /mnt/users/bchittenden/intranet/y_drive/

my $HOME=$ENV{HOME};
my $PWD=$ENV{PWD};

if( scalar @ARGV != 0 ){
    $PATH = $ARGV[0];
} else {
	$PATH = $PWD;
}

if( $PATH =~ m|^\./| ) {
    $PATH =~ s|^\./|$PWD/|;
}

if( $PATH =~ m|/mnt/[a-z]\b| ) {
    $PATH =~ s|/mnt/([a-z])\b|${1}:|;
} else {
    if( $PATH =~ /^~/ ) {
        $PATH =~ s|^~|$HOME|;
    }
    my $root='//wsl$/Ubuntu-18.04';
    $PATH =~ s|^/|$root/|;
}
$PATH =~ s|/|\\|g;

print $PATH . "\n";

