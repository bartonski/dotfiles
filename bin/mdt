ts=`date +%Y-%m-%d`
SENDERID=$1
DIR="${SENDERID}_$ts"
mkdir $DIR
echo "Sender ID: $SENDERID" >  $DIR/project.txt
echo "Site#    : "          >> $DIR/project.txt
echo "Agency#  : "          >> $DIR/project.txt
echo "Status   : "          >> $DIR/project.txt
echo "Date     : `date`"    >> $DIR/project.txt
echo "FR#      : "          >> $DIR/project.txt
echo "Date due : "          >> $DIR/project.txt
vim $DIR/project.txt
