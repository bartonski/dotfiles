    local line2='| . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . .|'
    for hh in {8..17}
    do
        printf "%2d:00 $line1\n\n%2d:30 $line2\n\n" ${hh} ${hh}
    done
}

